<div class="chart-fields">
    <span>
      Wybierz datę początkową: <%= text_field_tag "start_date", 1.month.ago.strftime("%d.%m.%Y"), class: "form-control chart-field", :data => {:provide => "datepicker", 'date-format': 'dd.mm.yyyy'} %>
    </span>
    <span>
      Wybierz zakres:
      <%= select_tag :date_options, options_for_select([["Ostatni miesiąc", "last_month"], ["Ostatni rok", "last_year"], ["Inny zakres", "other"]], "last_month"), class: "form-control" %>
    </span>
    <span>
      Wybierz datę końcową: <%= text_field_tag "end_date", Time.now.strftime("%d.%m.%Y"), class: "form-control chart-field", :data => {:provide => "datepicker", 'date-format': 'dd.mm.yyyy'} %>
    </span>
</div>