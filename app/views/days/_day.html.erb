<div id="callendar-left-arrow">
  <%= link_to change_callendar_day_path((day - 1.day).strftime("%d_%m_%Y"), user), class: "arrow-link", remote: true do %>
      &larr;
  <% end %>
  <div id="callendar-hour-list">
    <% (6..22).each do |hour| %>
        <div class="callendar-hour">
          <%= hour %>:00
        </div>
    <% end %>
  </div>
</div>
    <%= render(
            partial: "days/single_day",
            locals: {day: day, day_number: day.wday-1, user: user, prefix: "single_"}
        ) %>
<div>
  <%= link_to change_callendar_day_path((day + 1.day).strftime("%d_%m_%Y"), user), class: "arrow-link", remote: true do %>
      &rarr;
  <% end %>
</div>