<div class="message-title">
  <div class="small-text">
    <% user = message.user %>
    <%= message.created_at.strftime("%H:%M %d.%m.%Y") %> <%= link_to user.full_name, user_path(user) %>
  </div>
  <div class="<%= user.id == current_user.id ? "addressee" : "user" %> message-content">
  <%= message.content.to_s.gsub("\n", "<br>").html_safe %>
  </div>
</div>