<div class="contact-data-tr">
  <div class="contact-data-td">
    <%= user.type_title %>
  </div>
  <div class="contact-data-td">
    <%= link_to user.full_name, user_path(user) %>
  </div>
  <div class="contact-data-td">
    <%= user.email %>
  </div>
  <div class="contact-data-td">
    <%= user.tel %>
  </div>
  <div class="contact-data-td">
    <%= user.city %>
  </div>
  <div class="contact-data-td">
    <%= user.street %>
  </div>
  <div class="contact-data-td">
    <%= user.post_code %>
  </div>
  <div class="contact-data-td">
    <%= user.pesel %>
  </div>
</div>