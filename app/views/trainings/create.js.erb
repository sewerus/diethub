$("#modal-window").find(".close").click();

<% date = @training.date %>
  $("#day_content_<%= date.strftime("%d_%m_%Y") %>").html("<%= j (render(
                      partial: 'days/day_content',
                      locals: {day: date.to_date, user: @training.patient}
                  )) %>");
  $("#single_day_content_<%= date.strftime("%d_%m_%Y") %>").html("<%= j (render(
                      partial: 'days/day_content',
                      locals: {day: date.to_date, user: @training.patient}
                  )) %>");
  $("#month_day_<%= date.strftime("%d_%m_%Y") %>").html("<%= j (render(
                      partial: "days/month_day",
                      locals: {day: date.to_date, start_date: date.to_date, user: @training.patient}
                  )) %>");